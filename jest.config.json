{
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "modulePathIgnorePatterns": [
    "/dist/"
  ],
  "moduleFileExtensions": [
    "ts",
    "js"
  ]
}